<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://120.79.166.231:3306/txl_lp?serverTimezone=GMT%2B8"
                        userId="lp"
                        password="lvpeng">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- JavaBean的生成位置 -->
        <javaModelGenerator targetPackage="com.strangeman.classmates.bean" targetProject=".\classmates-service\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- Mapper文件的生成位置 -->
        <sqlMapGenerator targetPackage="mapper"  targetProject=".\classmates-service\src\main\resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- Dao接口的生成位置 -->
        <javaClientGenerator targetPackage="com.strangeman.classmates.dao"  targetProject=".\classmates-service\src\main\java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="member" />
        <table tableName="classmate" />
        <table tableName="collection" />
        <table tableName="comment" />
        <table tableName="liker" />
        <table tableName="message" />
        <table tableName="paper" />
        <table tableName="share" />
        <table tableName="user" />
        <table tableName="attention" />
    </context>
</generatorConfiguration>